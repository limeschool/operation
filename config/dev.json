{
  "service": "operation",
  "system": {
    "skip_request_log": {
      "get:/auth": true
    },
    "timeout": "20s",
    "validator_i18n": {
      "default": "zh",
      "header": "x-language"
    },
    "log": {
      "level": 0,
      "trace_key": "log-id",
      "service_key": "service"
    }
  },
  "request": {
    "enable_log": true,
    "retry_count": 3,
    "retry_wait_time": "1s",
    "timeout": "10s",
    "request_msg": "http request",
    "response_msg": "http response"
  },
  "orm": [
    {
      "enable": true,
      "drive": "mysql",
      "name": "operation",
      "dsn": "root:root@tcp(127.0.0.1:3306)/operation?charset=utf8mb4&parseTime=True&loc=Local"
    }
  ],
  "redis": [
    {
      "enable": true,
      "name": "redis",
      "host": "127.0.0.1:6379"
    }
  ],
  "jwt": {
    "captcha": true,
    "expire": 7200,
    "max_expire": 172800,
    "secret": "limeschool",
    "store": "redis"
  },
  "rsa": [
    {
      "name": "private",
      "path": "cert/private.pem"
    },
    {
      "name": "public",
      "path": "cert/public.pem"
    }
  ],
  "rbac": {
    "db": "operation",
    "whitelist": {
      "post:/api/system/user/login": true,
      "post:/api/system/token/refresh": true,
      "post:/api/system/captcha": true
    }
  },
  "captcha": {
    "store": "redis",
    "expire": "30s"
  }
}
